@base:58rem;
*{
  box-sizing: border-box;
  text-decoration: none;
  list-style-type: none;
  font-size: 16px;
  padding: 0;
  margin: 0;
  text-rendering: optimizeLegibility;
  -webkit-tap-highlight-color:rgba(255,255,255,0);
}
.content{
  width: 1200px;
  margin: 0 auto;
  overflow-x: scroll;
}
.scroll-load-more{
  background-color: white;
}
.ell{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
body{
  font-family: Microsoft YaHei,"Helvetica Neue",Helvetica,Arial,sans-serif;
}
h1,h2,h3,h4,h5,h6,em,strong,b{font-weight:400;}
table {
  border-collapse:collapse;
  border-spacing:0;
}
textarea{
  resize:none;
}
.icon {
  width: 1em; height: 1em;
  vertical-align: -0.15em;
  fill: currentColor;
  overflow: hidden;
  color: #000;
}
.vux-loading{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 999;
  left: 0;
  top: 0;
}
.mask{
  position: fixed;
  left: 0;
  top:0;
  z-index: 250;
  background-color: rgba(0,0,0,.5);
  width: 100%;
  height: 100%;
}
.nowrap{
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
img{
  display: block;
  width: auto;
  height:auto;
}
#container{
  font-size: 14/@base;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}
a:focus,a:link,a:hover{
  -webkit-tap-highlight-color:transparent
}
input{
  border: none;
  background-color: transparent;
  -webkit-appearance: none;
}
input[type=text],input[type=password]{
  font-size: 14/@base;
}
html,body{
  //height: 100%;
  line-height: 1.5;
  font-size: 18px;
  word-wrap:break-word;
}
.all-header{
  position: relative;
  width: 100%;
  border-bottom:1px solid #d5d5d5;
}
.all-title{
  text-align: center;
  line-height:45/@base;
  font-size: 18/@base;
}
.all-header-left{
  position:absolute;
  width: 45/@base;
  text-align: center;
  line-height:45/@base;
  height:45/@base;
  top: 0;
  left: 0;
}
.all-header-left i{
  font-size: 20/@base;
}
.all-header-right{
  width: 45/@base;
  height: 44/@base;
  position:absolute;
  top: 0;
  right: 0;

  p{
    font-size: 16/@base;
    line-height: 45/@base;
  }
}
.header-right-color{
  color: #f23030;
}
::-webkit-scrollbar {
  display: none;
}
a:hover{
  text-decoration:none;
}
::-webkit-input-placeholder {
  color: #bcbcbc;
}
:-moz-placeholder {
  color: #bcbcbc;
}
::-moz-placeholder {
  color: #bcbcbc;
}
:-ms-input-placeholder {
  color: #bcbcbc;
}
/*数组增删过渡动画*/
.uplistItem {
  transition: all 1s;
}
/*若需要更改时间,请到相应应用页面也进行时间更改*/
/*.uplist-enter-active, .uplist-leave-active { 单独设置开始 结束时间
  transition: all .5s;
}*/
.uplist-enter, .uplist-leave-to{
  opacity: 0;
  transform: translateY(100/@base);
}
.uplist-leave-active {
  position: absolute;
}
/*动画二组*/
.ng-item {
  transition: all .5s;
}
.ng-enter-active, .ng-leave-active {
  transition: all .5s;
}
.ng-leave-to{
  opacity: 0;
}
.ng-leave-active {
  position: absolute;
}
.ng-enter{
  opacity: 0;
  transform: translateY(100/@base);
}

/*动画三组*/
.fade-enter-active, .fade-leave-active {
  transition: opacity .3s ease;
}
.fade-enter, .fade-leave-to {
  opacity: 0;
}
.mh-clearfix{
  &:after{
    content: '';
    display: table;
    clear: both;
  }
}

.weui-toast{
  padding: 5px 10px;
  line-height: 1.2;
}
a{
  //display: block;
  //width: 100%;
  //height: 100%;
  overflow: hidden;
  vertical-align: middle;
  color: inherit;
}
a:hover{
  text-decoration: underline;
}
header,footer,section,article,aside,nav,address,figure,figcaption,menu,details{display:block;}
