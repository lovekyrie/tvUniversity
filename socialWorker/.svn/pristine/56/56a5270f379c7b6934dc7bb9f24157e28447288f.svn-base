@base:58rem;
body,html{
  height: 100%;
}
#container{
  height: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  //height: 100%;
  overflow: auto;
  .el-dialog{
    width: 300px!important;
    .el-dialog__body{
      text-align: center; line-height: 41px;
      display: flex;
      display: -webkit-flex;
      justify-items: center;
      align-items: center;
      img{
        display: inline-block;
        margin-right: 15px;
        margin-left:35px
      }
    }
  }
  .box{
    flex: 1;
    width: 560px;
    margin: 0 auto;
    background-color: white;
    padding: 15/@base 18/@base 40/@base 18/@base;
    div{
     &:nth-of-type(1){
       div{
         border: 0;
         display: flex;
         flex-flow: row nowrap;
         justify-content: space-between;
         align-items: center;
         span{
           height: 1px;
           width: 30%;
           background-color: #ccc;
         }
         h3{
           font-size: 24px;
           text-align: center;
           width: 20%;
         }
       }
     }
     &:nth-of-type(3){
       p{
         &:nth-of-type(2){
           a{
             color: #3a71a8;
           }
         }
       }
     }
      &:nth-last-of-type(1){
        div{
          margin-top: 65px;
          padding-left: 0;
          border:0;
          input{
            border-radius: 5px;
            background-color: #3a71a8;
            color: #fff;
          }
        }
      }
    }
    .b-input{
      margin-top: 30px;
      display: flex;
      flex-flow: row nowrap;
      align-items: center;
      p{
        width: 80px;
        line-height: 40px;
        height: 40px;
        &:nth-of-type(2){
          margin-left: 30px;
          width: 130px;
        }
      }
      div{
         flex: 1;
         padding-left: 10px;
         border: 1px solid #ddd;
         height: 50px;
         line-height: 50px;
         font-size: 16px;
         input{
           width: 100%;
           border: 0;
           height: 100%;
         }
      }
    }
  }

}