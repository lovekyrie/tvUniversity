body {
  background: #fff;
}
.test {
  background: orange;
  display: flex;
  z-index: 99;
}
.login {
  height: 590px;
  position: relative;
}
.login form {
  background: #fff;
  padding: 40px 60px;
  width: 610px;
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -50%);
}
.login h3 {
  text-align: center;
  font-size: 30px;
  margin-bottom: 40px;
}
.login .el-form-item {
  margin-bottom: 30px;
}
.login .el-form-item span {
  width: 100px;
  text-align: right;
  padding-right: 10px;
  font-size: 20px;
}
.login .el-form-item__content {
  display: flex;
  align-items: center;
  position: relative;
  margin-left: 0!important;
}
.login .el-form-item__content input {
  height: 60px;
  padding-left: 40px;
  font-size: 18px;
  border-radius: 0;
}
.login .el-form-item__content a {
  position: absolute;
  right: 0;
  font-size: 20px;
  color: #3a71a8;
}
.login .el-input,
.login .el-input__inner {
  width: 367px;
}
.login button {
  height: 60px;
  line-height: 60px;
  width: 367px;
  border-radius: 5px;
  margin-top: 40px;
  font-size: 18px;
  margin-left: 104px;
}
.login .el-button {
  padding: 0;
}
.login .el-checkbox {
  height: 40px;
  line-height: 40px;
}
.login .el-form-item__error {
  font-size: 18px;
}
.login .el-checkbox__input.is-checked .el-checkbox__inner {
  background: #3A71A8;
}
.login .el-checkbox__label {
  margin-left: 8px;
}
.login .el-form-item__content p {
  float: right;
}
.login .el-form-item__content p a {
  margin-left: 20px;
}
.login .el-form-item__error {
  padding-left: 110px;
}
.size h3 {
  font-size: 34px!important;
}
.size span {
  font-size: 24px!important;
}
.size input {
  font-size: 24px!important;
}
.size button {
  font-size: 24px!important;
}
