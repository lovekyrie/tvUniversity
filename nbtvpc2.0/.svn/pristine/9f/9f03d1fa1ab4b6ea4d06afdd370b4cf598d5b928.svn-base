body {
  background: #fff;
}
.test {
  background: orange;
  display: flex;
  z-index: 99;
}
.crumb {
  padding: 30px 0;
  padding-left: 30px;
  color: #999;
}
.crumb a {
  color: #999;
}
.crumb a:nth-last-of-type(1) {
  cursor: inherit;
}
.detail {
  border-top: 1px solid #ddd;
  padding: 60px 0 100px 0;
}
.detail h2 {
  text-align: center;
  font-size: 25px;
}
.detail h2:nth-of-type(2) {
  margin-bottom: 10px;
}
.detail h3 {
  text-align: center;
  color: #999;
  margin: 15px 0 40px 0;
}
.detail p {
  line-height: 26px;
}
.detail img {
  width: 100%;
  margin: 20px 0;
}
.size h2 {
  font-size: 36px!important;
}
.size h3 {
  font-size: 26px!important;
}
.size p {
  font-size: 26px!important;
  line-height: 33px!important;
}
.size a {
  font-size: 26px!important;
}
.size span {
  font-size: 26px!important;
}
