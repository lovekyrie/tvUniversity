@import "../../../../assets/css/init.less";

.crumb{
    padding: 30px 0;
    padding-left: 30px;
    color: #999;
    a{
        color: #999;
        &:nth-last-of-type(1){
            cursor: inherit;
        }
    }
}

.detail{
    border-top: 1px solid #ddd;
    padding: 60px 0 100px 0;
    h2{
        text-align: center;
        font-size: 25px;
        &:nth-of-type(2){
            margin-bottom: 10px;
        }
    }
    h3{
        text-align: center;
        color: #999;
        margin: 15px 0 40px 0;
    }
    p{
        line-height: 26px;
    }
    img{
        width: 100%;
        margin: 20px 0;
    }
}


.size{
    h2{
        font-size: 36px!important;
    }
    h3{
        font-size: 26px!important;
    }
    p{
        font-size: 26px!important;
        line-height: 33px!important;
    }
    a{
        font-size: 26px!important;
    }
    span{
        font-size: 26px!important;
    }
}